<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="anchorPane" prefHeight="550.0" prefWidth="500.0" styleClass="anchor-pane" stylesheets="@../../../resources/styles/default.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.semux.gui.javafx.wallet.scenes.secondary.book.AddressBookFXMLController">
    <children>
      <GridPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            <RowConstraints minHeight="70.0" prefHeight="70.0" vgrow="NEVER" />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
         <children>
            <TableView fx:id="addressBookTableView" tableMenuButtonVisible="true" GridPane.columnSpan="3" GridPane.rowSpan="2">
              <columns>
                <TableColumn fx:id="numberAddressBookTableColumn" minWidth="20.0" prefWidth="20.0" text="#" />
                <TableColumn fx:id="nameAddressBookTableColumn" minWidth="100.0" prefWidth="100.0" text="Name" />
                  <TableColumn fx:id="addressAddressBookTableColumn" minWidth="250.0" prefWidth="300.0" text="Address" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="addAddressButton" minHeight="40.0" mnemonicParsing="false" onKeyPressed="#addOnEnterKeyPressed" onMouseClicked="#add" prefWidth="100.0" styleClass="control-interactive" text="Add">
                     <font>
                        <Font size="12.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="copyAddressButton" minHeight="40.0" mnemonicParsing="false" onKeyPressed="#copyOnEnterKeyPressed" onMouseClicked="#copy" prefWidth="100.0" styleClass="control-interactive" text="Copy">
                     <font>
                        <Font size="12.0" />
                     </font></Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <children>
                  <Button fx:id="deleteAddressButton" minHeight="40.0" mnemonicParsing="false" onKeyPressed="#deleteOnEnterKeyPressed" onMouseClicked="#delete" prefWidth="100.0" styleClass="control-interactive" text="Delete">
                     <font>
                        <Font size="12.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
